{
  "name": "fullstack-monolith-test",
  "private": true,
  "scripts": {
    "dev:server": "tsc --watch",
    "dev:run": "nodemon",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:run\"",
    "build:server": "tsc",
    "build:client": "cd client && npm install && npm run build",
    "build": "npm run build:server && npm run build:client",
    "start": "node dist/server/index.js"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^4.21.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "typescript": "^5.9.3"
  }
}
